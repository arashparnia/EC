"30"
)
declare -a cooling_rate=(
"0.0000001" "0.00000001" "0.000000001"
)
declare -a cutoff=(
"40"
)

for ps in "${populationSize[@]}"
do
    for mutchance in "${genome_mutation_chance[@]}"
    do
        for mutstep in "${mutation_step[@]}"
        do
            for slice in "${tournamentSelection_slice[@]}"
